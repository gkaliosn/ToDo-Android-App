        <shape android:shape="rectangle">
            <solid android:color="#852730" /> <!-- πιο σκούρο πράσινο -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Κανονική κατάσταση -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6D1D24" /> <!-- πράσινο -->
            <corners android:radius="16dp" />
        </shape>
    </item>

</selector>
