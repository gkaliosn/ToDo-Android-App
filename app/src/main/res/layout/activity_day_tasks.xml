<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/day_tasks_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE3D6">

    <LinearLayout
        android:id="@+id/day_tasks_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Βυσσινί μπάρα με κουμπί επιστροφής και ημερομηνία -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#6D1D24">

            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start|center_vertical"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="Επιστροφή"
                android:src="@drawable/arrow_back_24"
                android:scaleType="fitXY"
                android:padding="4dp" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ημερομηνία"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

        </FrameLayout>

        <!-- Κουμπί Προσθήκης -->
        <Button
            android:id="@+id/buttonAddTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Add Task" />

        <!-- Ενεργές εργασίες -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Tasks"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewActive"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />

        <!-- Κενό πριν τις ολοκληρωμένες εργασίες -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- Ολοκληρωμένες εργασίες -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completed Tasks"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="48dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCompleted"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />

    </LinearLayout>

    <!-- Κουμπί Undo -->
    <ImageView
        android:id="@+id/undo_x"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_undo_x"
        android:visibility="gone"
        android:alpha="1" />

</FrameLayout>
