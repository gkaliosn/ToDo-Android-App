<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overdue_tasks_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECE3D6">

    <!-- Κόκκινη μπάρα -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#6D1D24">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="Επιστροφή"
            android:src="@drawable/arrow_back_24"
            android:scaleType="fitXY"
            android:padding="4dp" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overdue Tasks"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Overdue εργασίες -->
    <TextView
        android:id="@+id/labelOverdue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Overdue Tasks"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOverdue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="8dp" />

    <ImageView
        android:id="@+id/undo_x"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_undo_x"
        android:visibility="gone"
        android:alpha="1" />


</LinearLayout>
